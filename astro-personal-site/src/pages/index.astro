---
// Component script section
import Main from '../layouts/Main.astro'
import Cards from '../components/Cards.astro'
const profilePicture = "https://i.imgur.com/JPGFE75.jpg"
---

<!-- Component template section -->
<Main title="Frau Katerina">
	<body>
		<div class="profile">			
			<img alt="Frau katerina's website" width="100px" height="100px" src={profilePicture} class="profile__picture">
			<div class="profile__details">
				<h1>Frau Katerina</h1>
				<h2>VP of Engineering at Gooogle</h2>
				<p>Helping developers be excellent and suceed at building scalable products.</p>
			</div>
		</div>
	</body>
	
	<Cards cards={[
		{
			title: "Here are my guiding philosophies for life",
      gradientFrom: "#818cf8",
      gradientTo: "#d8b4fe",
			to: "/philosophies"
		},
		{
			title: "A summary of my work history",
      gradientFrom: "#fde68a",
      gradientTo: "#fca5a5",
			to: "/work-summary"
		},
		{
			title: "What I do beyond technology",
      gradientFrom: "#6ee7b7",
      gradientTo: "#9333ea",
			to: "/beyond-tech"
		}
	]} />

	<div class="featured-blogs">
		<h3 class="featured-blogs__title">Featured Blogs</h3>
		<p class="featured-blogs__description">
			Opinion pieces that will change everything you know about web development.
		</p>
	</div>

	<ol>
		<li>
			<a href="blogs/typescript-is-the-new-javascript">
				Typescript is the new JavaScript
			</a>
		</li>
		<li>
			<a href="blogs/rust-javascript-tooling">
				Why Rust is the future of JavaScript tooling
			</a>
		</li>
		<li>
			<a href="blogs/sleep-more">
				Why you should sleep more
			</a>
		</li>
	</ol>
</Main>

<style>
	/* CSS as usual */
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0
	}

	.profile__details {
		flex: 1 0 300px;
	}

	.profile__details > h1 {
		margin-top: 0
	}

	.profile__picture {
		border-radius: 50%;
		margin: 0 2rem 1rem 0
	}
</style>

