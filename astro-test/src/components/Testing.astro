    ))
  }
</ul> -->

<!-- Conditional rendering -->
<ul>
    {
    data.map((user) => {
      const { gender } = user
      // Non-binary
     return (
      <li>
        <span>{`${user.first_name} ${user.last_name}`}</span>
        <span>{gender == 'Non-binary' && 'Non-binary 😎'}</span>
      </li>
      )
    })
  }
</ul>