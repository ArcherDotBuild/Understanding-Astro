---
const URL = 'https://random-data-api.com/api/users/random_user?size=3';
const response = await fetch(URL);
const data = await response.json();
---
<head>
  <meta charset="utf-8" />
</head>
<!-- use here -->

<!-- Dynamic attribute -->
<a href={URL}>Go get a user</a>

<!-- Dynamic HTML -->
<h1>Here are the {data.length} users</h1>
